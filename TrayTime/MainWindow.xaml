<Window
    x:Class="TrayTime.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TrayTime"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:system="using:System"
    mc:Ignorable="d"
    x:DefaultBindMode="OneWay"
    Title="TrayTime">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Margin="50">
        <StackPanel Spacing="10">
            <TextBlock Text="Select Time Zone" 
                       Style="{StaticResource SubtitleTextBlockStyle}"/>

            <ItemsControl ItemsSource="{x:Bind _timeNotifyIcons}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="local:TimeNotifyIcon">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10" RowDefinitions="Auto,Auto"
                              Margin="0,0,0,10">
                            <Button Grid.Column="1">
                                <FontIcon Glyph="&#xE74D;" FontSize="17"/>
                            </Button>
                            
                            <ComboBox Grid.Column="0" 
                                      ItemsSource="{x:Bind local:TimeNotifyIcon.AllTimeZones}"
                                      SelectedItem="{x:Bind TimeZone}"
                                      Tag="{Binding}"
                                      Loaded="ComboBox_Loaded"
                                      Width="400"
                                      HorizontalAlignment="Left"
                                      SelectionChanged="TimeZoneComboBox_SelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate x:DataType="system:TimeZoneInfo">
                                        <TextBlock Text="{x:Bind DisplayName}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <TextBlock Grid.Column="0" Grid.Row="1"
                                       Margin="13,0,0,0"
                                       Text="{x:Bind CurrentTime}"
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Click="AddTimeZoneClick">
                <FontIcon Glyph="&#xE710;" FontSize="17"/>
            </Button>

            <TextBlock Text="Size" 
                       Margin="0,10,0,0"
                       Style="{StaticResource SubtitleTextBlockStyle}"/>

            <StackPanel>
                <RadioButton IsChecked="{x:Bind HoursOnly, Mode=TwoWay}">Hour</RadioButton>
                <RadioButton IsChecked="{x:Bind Not(HoursOnly)}">Hour : Minute</RadioButton>
            </StackPanel>

            <TextBlock Text="Startup" 
                       Margin="0,10,0,0"
                       Style="{StaticResource SubtitleTextBlockStyle}"/>

            <ToggleSwitch Header="Start automatically when I sign in" 
                          IsOn="{x:Bind IsStartupEnabled, Mode=TwoWay}" />

        </StackPanel>
    </Grid>
</Window>
