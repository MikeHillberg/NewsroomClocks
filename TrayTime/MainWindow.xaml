<Window
    x:Class="TrayTime.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TrayTime"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:system="using:System"
    mc:Ignorable="d"
    x:DefaultBindMode="OneWay"
    Title="TrayTime">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <ScrollViewer>
        <Grid x:Name="_root" ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto,Auto,Auto"
              Margin="50"
              ColumnSpacing="40"
              RowSpacing="30"
              Padding="60"
              Background="{ThemeResource SystemControlBackgroundAltHighBrush}">

            <TextBlock Text="How To" Grid.Row="0"
                           Style="{StaticResource SubtitleTextBlockStyle}"/>

            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,10,0,0">
                <TextBlock Style="{StaticResource BodyTextBlockStyle}" TextWrapping="Wrap">
                    Select time zones below, and the'll show up in the flyout of your system tray clock area (notification area) like this:
                </TextBlock>

                <Image Source="/Assets/InFlyout.png" 
                       Margin="50,0,0,0"
                       Height="93"
                       HorizontalAlignment="Left"/>

                <TextBlock Style="{StaticResource BodyTextBlockStyle}" 
                           Margin="0,20,0,0"
                           TextWrapping="Wrap">
                    You can drag that out of the flyout and then it will always be visible like this:
                </TextBlock>

                <Image Source="/Assets/InSysTray.png" 
                       Margin="50,10,0,0"
                       Height="38"
                       HorizontalAlignment="Left"/>
            </StackPanel>

            <TextBlock Text="Time Zone(s)" 
                       Grid.Column="0" Grid.Row="1"
                       Style="{StaticResource SubtitleTextBlockStyle}"/>

            <StackPanel Grid.Column="1" Grid.Row="1">
                <!-- List of time zones already picked -->
                <ItemsControl ItemsSource="{x:Bind local:Manager.Instance.TimeNotifyIcons}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="local:TimeNotifyIcon">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10" RowDefinitions="Auto,Auto"
                                  Margin="0,0,0,10">

                                <!-- Column 1: time zone -->
                                <StackPanel Margin="13,10,0,0" Grid.Row="0">
                                    <TextBlock Text="{x:Bind CityName}"
                                               FontWeight="Bold"
                                               Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="{x:Bind CurrentTime}"
                                               Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>

                                <!-- Column 2: delete button -->
                                <Button Grid.Column="1" Click="DeleteTimeZone" Tag="{Binding}">
                                    <FontIcon Glyph="&#xE74D;" FontSize="17"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <StackPanel Orientation="Horizontal" Spacing="20">
                    <Button Click="AddTimeZoneClick2">
                        <FontIcon Glyph="&#xE710;" FontSize="17"/>
                    </Button>

                    <TextBlock VerticalAlignment="Center"
                               Style="{StaticResource BaseTextBlockStyle}"
                               FontStyle="Italic"
                               Text="Add Time Zone" />
                </StackPanel>
            </StackPanel>

            <TextBlock Text="Time Format" 
                       Grid.Column="0" Grid.Row="2"
                       Style="{StaticResource SubtitleTextBlockStyle}"/>

            <StackPanel Grid.Column="1" Grid.Row="2" Margin="0,10,0,0">
                <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                           Margin="0,0,0,20">
                    Choose to show the time in hours:minutes format or just hours.
                    <LineBreak/>
                    Just hours allows the text to be larger and more readable                
                </TextBlock>

                <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto"
                      ColumnSpacing="20"
                      RowSpacing="10">

                    <RadioButton Grid.Row="0" Grid.Column="0" 
                                 IsChecked="{x:Bind Not(local:Manager.Instance.HoursOnly)}">Hour : Minute</RadioButton>
                    <Image Grid.Row="1" Grid.Column="0" 
                           Width="80"
                           HorizontalAlignment="Left"
                           Source="/Assets/HoursMinutesExample.png" />

                    <RadioButton Grid.Row="0" Grid.Column="1" 
                                 IsChecked="{x:Bind local:Manager.Instance.HoursOnly, Mode=TwoWay}">Hour</RadioButton>

                    <Image Grid.Row="1" Grid.Column="1" 
                           Width="80"
                           HorizontalAlignment="Left"
                           Source="/Assets/HoursExample.png" />

                </Grid>
            </StackPanel>

            <TextBlock Text="Startup" 
                       Margin="0,10,0,0"
                       Grid.Column="0" Grid.Row="3"
                       Style="{StaticResource SubtitleTextBlockStyle}"/>

            
            <ToggleSwitch Header="Start automatically when I sign in" 
                          Grid.Column="1" Grid.Row="3"
                          IsOn="{x:Bind local:Manager.Instance.IsLaunchOnStartupEnabled, Mode=TwoWay}" />

            <!--</StackPanel>-->
        </Grid>
    </ScrollViewer>
</Window>
